<div class="main-nav">
  <%= link_to "Cooler Communities", root_path, class: "main-nav__header" %>
  <div class="main-nav__links">
    <div>

      <% if !current_user %>
        <%= render partial: 'layouts/welcome_message' %>
        <%= link_to "Login", login_path, class: "main-nav__link" %>
        <span class="main-nav__link-separator"> | </span>
        <%= link_to "Register", register_path, class: "main-nav__link" %>

      <% else %>
        <%= render partial: 'layouts/points_boxes' %>
             
        <span class="main-nav__link">Welcome, <%= current_user.first_name != "" ? current_user.first_name : current_user.username%>!</span>
        <span class="main-nav__link-separator"> | </span>
        <%= link_to "Logout", logout_path, class: "main-nav__link" %>
        <span class="main-nav__link-separator"> | </span>
        <%= link_to "Summary", user_summary_path, class: "main-nav__link" %>
        <span class="main-nav__link-separator"> | </span>
        <%= link_to "Account", user_path(current_user), class: "main-nav__link" %>
      <% end %>
    </div>
  </div>
  <div id="message__thankyou"></div>
</div>
